# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# GLM API Key
GLM_API_KEY=your_glm_api_key_here

# GLM API URL (для ChatGLM/ZhipuAI)
GLM_API_URL=https://api.z.ai/api/coding/paas/v4

# GLM Model (glm-4, glm-4-7b, glm-4-plus, glm-4-flash, glm-3-turbo)
GLM_MODEL=glm-4.7-flash

# ID канала/группы (опционально, для ограничения доступа, через запятую)
ALLOWED_CHAT_IDS=

# Погода: используется OpenWeatherMap API (бесплатный, до 1 млн запросов/месяц)
# API ключ встроен в код (бесплатный тариф)

# Чаты для ежедневной отправки погоды (через запятую)
# Пример: WEATHER_CHAT_IDS=-1001234567890,-1009876543210
WEATHER_CHAT_IDS=

# Время отправки погоды (формат HH:MM)
WEATHER_SEND_TIME=08:00
